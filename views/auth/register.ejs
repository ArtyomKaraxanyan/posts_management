<!DOCTYPE html>
<html lang="en" >
  <%- include('../head')%>;
<body>
 <div class="body">
<div class="login-form">
  <form action="/register_user" method="post">
    <h1>Register</h1>
    <div class="content">
      <div class="input-field">
        <input type="text"  placeholder="First Name" autocomplete="nope" name="first_name" value="<%= new_user.first_name %>" >
      </div>
      <div class="input-field">
        <input type="text" placeholder="Last Name" autocomplete="nope" name="last_name" value="<%= new_user.last_name %>">
      </div>
      <div class="input-field">
        <input type="email" placeholder="Email" autocomplete="nope" name="email" value="<%= new_user.email %>">
      </div>
      <div class="input-field">
        <input type="password" placeholder="Password" autocomplete="new-password" name="password">
      </div>

      <% if (validationMessige && Array.isArray(validationMessige)) { %>
        <ul>
          <% validationMessige.forEach(function(validation) { %>
            <li style="color: red;"><%= validation.message %></li>
          <% }); %>
        </ul>
      <% } %>

      <div class="action">
        <div></div>
        <button type="submit">Register</button>
      </div>
      <a href="#" class="link">Forgot Your Password?</a>
      
    </div>
  
  </form>
  <div class="action ">
    <div class="grid-form">

    <form class="register" action="/register"> <button >Sign Up</button></form>
   
    <form class="login" action="/login"> <button>Sign in</button></form>

  </div>
  </div>
</div>
<!-- partial -->
  <script  src="./script.js"></script>

</div>
</body>
</html>
