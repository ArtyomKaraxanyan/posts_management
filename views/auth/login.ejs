<!DOCTYPE html>
<html lang="en" >
  <%- include('../head')%>;
<body>
  <div class="body">
<div class="login-form">
  <form action="/login_user" method="post">
    <h1>Login</h1>
    <div class="content">
      <div class="input-field">
        <input type="email" placeholder="Email"  name="email" autocomplete="nope">
      </div>
      <div class="input-field">
        <input type="password" placeholder="Password" autocomplete="password"  name="password">
      </div>

      <% if (loginvalidationMessige) { %>
        <ul>
            <li style="color: red;"><%= loginvalidationMessige %></li>
        </ul>
      <% } %>
      <div class="action">
        <div></div>
      <button>Login</button>
      </div>
      <a href="#" class="link">Forgot Your Password?</a>
    </div>
  
  </form>
  <div class="action ">
    <div class="grid-form">

    <form class="register" action="/register"> <button >Sign Up</button></form>
   
    <form class="login" action="/login" > <button>Sign in</button></form>

  </div>
  </div>
</div>
<!-- partial -->
  <script  src="./script.js"></script>
</div>
</body>
</html>
